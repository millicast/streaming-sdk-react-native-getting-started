    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug iOS Hermes",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "platform": "ios",
            "target": "simulator",
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/.vscode/.react",
            "runArguments": [
                "run-ios",
                "--simulator",
                "iPhone 14 Pro Max",
                "--scheme",
                "TestApp"
            ]
        },
        {
            "name": "Debug Android Hermes",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "platform": "android"
        }
    ]
}